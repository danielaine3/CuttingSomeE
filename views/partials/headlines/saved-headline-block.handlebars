<div id="navbar">
	<ul>
		<li><button class="main-button" id="home">HOM<img class="elogo" src="./assets/images/E!.png"></button></li>
	</ul>
</div>
{{#each headline}}
	<div class="card-body">
		<div class="display">
			<img src="{{this.pic}}">
			<br>
			<p class="title">{{this.title}}</p>
			<br>
			<a class= "link" href="http://www.eonline.com{{this.link}}"><button>READ MORE</button></a>
			<br>
			<a><button class="remove-save" data-id="{{this._id}}">REMOVE FROM SAVED</button></a>
			<a><button class="add-comment" data-id="{{this._id}}">COMMENT</button></a>
		</div>
		<div class="commentDiv hidden">
			<div class="modal-header">Leave a Comment</div>
			<form class="form">
				<textarea id="comment-title" placeholder="Title"></textarea>
				<br>
				<textarea id="comment-body" placeholder="Comment"></textarea>
				<br>
				<button id="save-comment">Submit</button>
				<button id="close">Close</button>
			</form>
		</div>
		<hr>
		<div class="prior-comments"></div>
		{{!-- <hr> --}}
	</div>
{{/each}}